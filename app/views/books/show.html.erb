<!--書籍の詳細画面-->



      <h2>Book Detail</h2>
        <table class='table table-hover table-inverse'>

          <tbody>
            <tr>
              <!--ユーザー画像、ユーザー名-->
              <td><%= image_tag @user.get_profile_image(100,100) %><br>
                  <%= link_to @user.name, user_path(@user.id) %></td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <!--編集ボタン-->
              <td><%= link_to 'Edit', "/books/#{@book.id}/edit" %></td>
              <!--削除ボタン　destroyはHTTPメソッドがPOSTでなくDELETEのため、HTTPmメソッドをdeleteに指定-->
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            </tr>
          </tbody>

        </table>


