<!--書籍の編集画面-->

<!--バリデーションによるエラーメッセージ表示-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class='container'>
	<div class='row'>

    <!--col-lg-5：ブレークポイントの指定large中型ディスプレイ、px-5：padding左右のサイズ５、mx-auto：margin左右が自動-->
    <div class='col-lg-5 px-5 mx-auto'>
      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>
        <!--テキスト・パスワード・テキストボックスでは、入力部品のグループにform-group、入力部品にform-controlを指定する-->
        <div class='form-group'>
          <label>Title</label>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <label>Option</label>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <!--アップデートボタン-->
          <!--bt：ボタン、btn-success：ボタンの種類を指定-->
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--ユーザーの詳細画面(books/show.html.erb)へ遷移-->
      <%= link_to 'Show', book_path(@book) %>
      |
      <!--書籍の一覧画面(books/index.html.erb)へ遷移-->
      <%= link_to 'Back', books_path %>

    </div>

  </div>
</div>