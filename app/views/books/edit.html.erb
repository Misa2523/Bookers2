<!--書籍の編集画面-->

<!--バリデーションによるエラーメッセージ表示-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class='container px-5 px-sm-0'>
	<div class='row'>

    <div class='col-md-3'>

<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>
  <br>

  <!--アップデートボタン-->
  <%= f.submit 'Update Book'%>

<% end %>

<!--ユーザーの詳細画面(users/show.html.erb)へ遷移-->
<%= link_to 'Show', user_path(@book) %>
|
<!--書籍の一覧画面(books/index.html.erb)へ遷移-->
<%= link_to 'Back', books_path %>



    </div>

  </div>
</div>