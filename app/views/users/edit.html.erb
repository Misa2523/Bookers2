<!--ユーザー情報の編集画面-->

<!--バリデーションによるエラーメッセージ表示-->
<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class='container'>
	<div class='row'>

    <!--col-lg-5：ブレークポイントの指定large中型ディスプレイ、px-5：padding左右のサイズ５、mx-auto：margin左右が自動-->
    <div class='col-lg-5 px-5 mx-auto'>
      <h2>User info</h2>

      <%= form_with model: @user do |f| %>
        <!--テキスト・パスワード・テキストボックスでは、入力部品のグループにform-group、入力部品にform-controlを指定する-->
        <div class='form-group'>
          <label>Name</label>
          <%= f.text_field :name, class: 'form-control', id:"inputName" %>
        </div>
        <div class='form-group'>
          <label for="inputImage">Image</label>
          <!--ファイル部品の場合、form-controlの代わりにform-control-file--->
          <%= f.file_field :profile_image, class: 'form-control-file', placeholder:"プロフィール画像", accept: "image/*" %>
        </div>
        <div class='form-group'>
          <label>Introduction</label>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <!--アップデートボタン-->
          <!--bt：ボタン、btn-secondary：ボタンの種類を指定-->
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>

    </div>

  </div>
</div>