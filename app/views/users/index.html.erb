<!--全ユーザーの一覧画面（Users画面）-->

<div class='container px-5 px-sm-0'>
	<div class='row'>

		<!--画面左側-->
		<!--テンプレートの呼び出し（render '部分テンプレートファイル名', ローカル変数: 渡す値）-->
		<%= render 'books/newform', user: @user, book: @book %>

		<!--画面右側-->
    <!--全ユーザーの一覧-->
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>   <!--「@books.each」Bookレコードの数だけ繰り返し処理を行う-->
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <!--ユーザー詳細ページ(users/show.html.erb)へ遷移-->
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>