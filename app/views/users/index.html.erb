<!--全ユーザーの一覧画面-->

<div class='col-md-8 offset-md-1'>
  <h2>Users</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>   <!--「@books.each」Bookレコードの数だけ繰り返し処理を行う-->
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <!--ユーザー詳細ページ(users/show.html.erb)へ遷移-->
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>